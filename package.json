{
  "name": "simple-todo",
  "version": "1.0.0",
  "description": "BMad To-Do Demo Application - Showcasing full-stack TypeScript development with Angular and Express.js",
  "main": "index.js",
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "nx run-many --target=build --all",
    "start": "nx serve simple-todo",
    "start:api": "nx serve simple-todo-backend",
    "dev": "concurrently \"pnpm start\" \"pnpm start:api\"",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "e2e": "nx e2e simple-todo-e2e",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "nx run-many --target=type-check --all",
    "clean": "nx reset && rm -rf node_modules dist coverage",
    "install:all": "pnpm install",
    "prepare": "husky install"
  },
  "author": "BMad Development Team",
  "license": "MIT",
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "~1.19.1",
    "@analogjs/vitest-angular": "~1.19.1",
    "@angular-devkit/architect": "^0.2003.1",
    "@angular-devkit/core": "~20.2.0",
    "@angular-devkit/schematics": "~20.2.0",
    "@angular/build": "~20.2.0",
    "@angular/cli": "~20.2.0",
    "@angular/compiler-cli": "~20.2.0",
    "@angular/language-service": "~20.2.0",
    "@eslint/js": "^9.8.0",
    "@nx/angular": "^21.5.2",
    "@nx/devkit": "21.5.2",
    "@nx/esbuild": "21.5.2",
    "@nx/eslint": "21.5.2",
    "@nx/eslint-plugin": "21.5.2",
    "@nx/js": "21.5.2",
    "@nx/node": "^21.5.2",
    "@nx/playwright": "21.5.2",
    "@nx/vite": "21.5.2",
    "@nx/web": "21.5.2",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~20.2.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "20.19.9",
    "@typescript-eslint/utils": "^8.40.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "angular-eslint": "^20.2.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-playwright": "^1.6.2",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@angular/common": "~20.2.0",
    "@angular/compiler": "~20.2.0",
    "@angular/core": "~20.2.0",
    "@angular/forms": "~20.2.0",
    "@angular/platform-browser": "~20.2.0",
    "@angular/router": "~20.2.0",
    "@simple-todo/shared": "workspace:*",
    "@supabase/supabase-js": "^2.57.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/validator": "^13.15.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "rxjs": "~7.8.0",
    "validator": "^13.15.15",
    "zone.js": "~0.15.0"
  }
}
